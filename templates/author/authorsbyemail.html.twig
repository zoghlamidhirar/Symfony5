<h1>List Authors</h1>

<table border="1">
  <tr>
    <td>Id</td>
    <td>Name</td>
    <td>Email</td>
  </tr>
  {% for author in tabAuthors %}
  <tr>
    <td>{{ author.id }}</td>
    <td>{{ author.name }}</td>
    <td>{{ author.mail }}</td>
  </tr>
  {% endfor %}
</table>

